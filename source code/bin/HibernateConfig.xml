<configuration>
	<facilities>
		<facility id="nhibernate">
			<factory id="nhibernate.factory">
				<settings>
					<item key="hibernate.connection.provider">NHibernate.Connection.DriverConnectionProvider</item>
					<item key="hibernate.connection.driver_class">NHibernate.Driver.SqlClientDriver</item>
					<item key="hibernate.connection.connection_string">Database=ezpos_eco_electric;Data Source=MATRIX-PC;User ID=sa;Password=matrix</item>
					<item key="hibernate.dialect">NHibernate.Dialect.MsSql2000Dialect</item>
				</settings>
				<resources>
					<!--================= Customers ==================-->
					<resource name="../Conf/Customer/Customers.hbm.xml" />
					<resource name="../Conf/Customer/DiscountCards.hbm.xml" />
					<!--================= Supplier ===================-->
					<resource name="../Conf/Supplier/Suppliers.hbm.xml" />
					<!--================= Common ===================-->
					<resource name="../Conf/Common/Counters.hbm.xml" />
					<resource name="../Conf/Common/ExchangeRates.hbm.xml" />
					<resource name="../Conf/Common/OperationLogs.hbm.xml" />
					<resource name="../Conf/Common/AppParameters.hbm.xml" />
					<resource name="../Conf/Common/AppParameterTypes.hbm.xml" />
					<resource name="../Conf/Common/IntegratedModules.hbm.xml" />
					<!--================= Products ===================-->
					<resource name="../Conf/Product/Products.hbm.xml" />
					<resource name="../Conf/Product/ProductAdjustments.hbm.xml" />
					<!--================= Deposit ==================-->
					<resource name="../Conf/Deposit/Deposits.hbm.xml" />
					<resource name="../Conf/Deposit/DepositItems.hbm.xml" />
					<!--================= SaleOrder ==================-->
					<resource name="../Conf/SaleOrder/SaleOrders.hbm.xml" />
					<resource name="../Conf/SaleOrder/SaleItems.hbm.xml" />
					<resource name="../Conf/SaleOrder/SaleOrdersReport.hbm.xml" />
					<!--================= Payment ==================-->
					<resource name="../Conf/Payment/Payments.hbm.xml" />
					<!--================= User ==================-->          
					<resource name="../Conf/User/Permissions.hbm.xml" />
					<resource name="../Conf/User/Users.hbm.xml" />
					<resource name="../Conf/User/UserPermissions.hbm.xml" />
					<!--================= Expense ===================-->
					<resource name="../Conf/Expense/Expenses.hbm.xml" />
				</resources>
			</factory>
		</facility>
	</facilities>
</configuration>
